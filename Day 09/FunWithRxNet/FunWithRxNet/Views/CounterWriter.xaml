<UserControl x:Class="FunWithRxNet.Views.CounterWriter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunWithRxNet.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <Button x:Name="btnPlus" Width="100" Height="100" Margin="10" FontSize="40">+</Button>
        <Button x:Name="btnMinus" Width="100" Height="100" Margin="10" FontSize="40">-</Button>
    </StackPanel>
</UserControl>
